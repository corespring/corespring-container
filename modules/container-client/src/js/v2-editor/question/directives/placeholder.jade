.component-placeholder(
  ng-class="{'show-icon': showIcon}", 
  data-component-id='{{id}}')
  //ng-if="configurable"
  .blocker
    .bg
    .content
    ul.edit-controls
      li.edit-icon-button(tooltip='edit', tooltip-append-to-body='true', tooltip-placement='bottom')
        i.fa.fa-pencil(ng-click='editNode($event)')
      li.delete-icon-button(tooltip='delete', tooltip-append-to-body='true', tooltip-placement='bottom')
        i.fa.fa-trash-o(ng-click='deleteNode($event)')
    .holder
