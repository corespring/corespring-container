.designer(ng-controller="Designer", ng-show="nav.isCurrentView('designer')")

  .config(ng-class="editorMode")
    wiggi-wiz(ng-model="item.xhtml",features="extraFeatures",style="position:relative; width: 100%; height: 300px")
    textarea(ng-model="item.xhtml", style="width: 100%; height: 300px")

  //this should go into partials/designer
