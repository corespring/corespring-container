
h2 Item Information

span.required * Required

form(style="padding-left: 10px;")

  .item-information
    .control-group
      label.control-label(for="description") * Description
        .controls
          textarea#description.form-control(
          ng-model='taskInfo.description',
          placeholder="Enter a description...",
          rows='3')
          p Describe the activitiy that the student will perform (e.g. Multiply single digit numbers, select evidence in reading passage)

    .control-group
      label.control-label(for="title") Title
        .controls
          textarea#title.form-control(
          ng-model='taskInfo.title',
          placeholder="Enter a title...",
          rows='1')

    .control-group
      .row
        .col-xs-6
          .form-group
            label.subject-label(for="primarySubject") * Primary Subject
            input#primarySubject(
            style="width:300px",
            ng-model="taskInfo.subjects.primary",
            type="text",
            ui-select2="primarySubjectAsync",
            data-placeholder="Choose a subject...")
        .col-xs-6
          .form-group
            label.subject-label(for="relatedSubject") Related Subject
            input#relatedSubject(
            style="width:300px",
            ng-model="taskInfo.subjects.related",
            ui-select2="relatedSubjectAsync",
            data-placeholder="Choose a subject...")

  h3 CCSS

  .fieldset
    .control-group.standards
      label.control-label Standard(s)
      .controls
        div(style='padding-bottom: 5px; height: 30px;')
          div(style='float: left; padding-right: 5px;')
            label * Subject
            select(ng-model='standardAdapter.subjectOption', ng-options='c.name for c in standardsOptions', style='vertical-align: top; width: 100px; padding-top: 0px;')
          div(style='float: left; padding-right: 5px;')
            label Category
            select(ng-model='standardAdapter.categoryOption', ng-options='p.name for p in standardAdapter.subjectOption.items')
          div(style='float: left;')
            label Sub-Category
            select(ng-model='standardAdapter.subCategoryOption', ng-options='z for z in standardAdapter.categoryOption.items')
        input(type='hidden', multiple='', ui-select2='standardAdapter', ng-model='taskInfo.standards', style='width: 500px;')

    .control-group
      label.control-label(for='gradeLevel') Grade Level
        .controls(style="width:80%")
          button-bar#gradeLevel(ng-model="taskInfo.gradeLevel", button-provider="gradeLevelDataProvider", key="key")

    .control-group
      label.control-label Item Type
      table.itemTypes
        tr
          td(valign='top')
            ul
              li(ng-repeat='t in itemTypeDataProvider', ng-show='$index < 2')
                h4 {{t.key}}
                label.radio(ng-repeat='k in t.value')
                  input(type='radio', ng-model='taskInfo.itemType', value='{{k}}')
                  | {{k}}
          td(valign='top')
            ul
              li(ng-repeat='t in itemTypeDataProvider', ng-show='$index >= 2 && $index < 4')
                h4 {{t.key}}
                label.radio(ng-repeat='k in t.value')
                  input(type='radio', ng-model='taskInfo.itemType', value='{{k}}')
                  | {{k}}
          td(valign='top')
            ul
              li(ng-repeat='t in itemTypeDataProvider', ng-show='$index >= 4')
                h4 {{t.key}}
                label.radio(ng-repeat='k in t.value')
                  input(type='radio', ng-model='taskInfo.itemType', value='{{k}}')
                  | {{k}}
              li
                h4 Other
                label.radio
                  input(type='radio', ng-model='taskInfo.itemType', value='{{otherItemType}}')
                  input.form-control(type='text', ng-model='$parent.otherItemType')

  h3 Other Alignments

  .control-group
    label.control-label Bloom's Taxonomy
      .controls
        select(ng-model='otherAlignments.bloomsTaxonomy', ng-options='c for c in bloomsTaxonomyDataProvider')

  .control-group
    label.control-label
      | Key Skills

      a(ng-click='expandKeySkills=!expandKeySkills')
        i(class="fa fa-{{!!expandKeySkills ? 'minus' : 'plus'}}-square-o", style="margin-left: 6px")
      .controls
        div(ng-show='!expandKeySkills', style='padding-top: 4px;')
          label {{getKeySkillsSummary(otherAlignments.keySkills)}}
        div(ng-repeat='skills in keySkillsDataProvider', ng-show='expandKeySkills')
          div(style="width:80%;")
            span.tag-list-header(style='float: left;') {{skills.header}}
            span(tag-list='tag-list', tags='skills.list', selected-tags='otherAlignments.keySkills')
          div(style='float: none; clear: both;')

  .control-group
    label.control-label Depth Of Knowledge
      .controls
        select(ng-model='otherAlignments.depthOfKnowledge', ng-options='c.key as c.value for c in depthOfKnowledgeDataProvider')
        span.help-inline Select the depth of knowledge that best represents the objective


  h2 Copyright Information

  .copyright-information

    .control-group
      label.control-label(for="title") * Author
        .controls
          input#author.form-control(
          ng-model='contributorDetails.author',
          placeholder="Enter author's name...")

    .control-group
      label.control-label Credentials
        .controls
          select(ng-model='contributorDetails.credentials', ng-options='c for c in credentialsDataProvider')

    .control-group
      label.control-label(for="title") Source URL
        .controls
          input#author.form-control(
          ng-model='contributorDetails.sourceUrl',
          placeholder="Enter a source url...")

    .control-group
      label.control-label(for="copyright-owner") * Copyright Owner
        .controls
          input#copyright-owner.form-control(
          ng-model='contributorDetails.copyright.owner',
          placeholder="Enter the copyright owner...")

    .control-group
      label.control-label(for="copyright-year") * Copyright Year
        .controls
          select(ng-model='contributorDetails.copyright.year', ng-options='c for c in copyrightYearDataProvider')

    .control-group
      label.control-label(for="copyright-expiration-date") Copyright Expiration Date
        .controls
          select(ng-model='contributorDetails.copyright.expirationDate', ng-options='c for c in copyrightExpirationYearDataProvider')

  h3 Permissions

  p This item is made available to the CoreSpring Community via a
  table.permissions
    tr
      td(style="padding: 10px; vertical-align: top")
        select(ng-model='contributorDetails.licenseType', ng-options='c for c in licenseTypeDataProvider')
      td(style="padding: 10px; vertical-align: top")
        span(ng-show='!contributorDetails.licenseType', style='color: #888; font-style: italic;') Not Assigned
        img(ng-show='contributorDetails.licenseType', src='{{getLicenseTypeUrl(contributorDetails.licenseType)}}')
        a(href="http://creativecommons.org/licenses/", target="_blank") Learn more

  h3 Additional Copyright Information
  p Does this item contain any other copyrighted materials? E.g. book passage, image, etc. *

  .control-group
    .controls
      label
        input(type='radio', ng-model='needAdditionalCopyrightInformation', value='yes', style='margin-right: 5px;')
        | Yes
        span.help-inline(style="padding-left:10px") If yes, please complete the following

      label
        input(type='radio', ng-model='needAdditionalCopyrightInformation', value='', style='margin-right: 5px; margin-left: 20px;')
        | No

  .additional-copyright-information(ng-repeat='item in contributorDetails.copyright.additional')

    .control-group
      label.control-label(for="owner") Owner
        .controls
          input#owner.form-control(
          ng-model='item.owner',
          placeholder="Enter a owner...")
    .control-group
      label.control-label(for="author") Author
        .controls
          input#author.form-control(
          ng-model='item.author',
          placeholder="Enter a author...")
    .control-group
      label.control-label(for="publisher") Publisher
        .controls
          input#publisher.form-control(
          ng-model='item.publisher',
          placeholder="Enter a publisher...")
    .control-group
      label.control-label(for="year") Year
        .controls
          input#year.form-control(
          ng-model='item.year',
          placeholder="Enter a year...")
    .control-group
      label.control-label(for="license") License
        .controls
          select(ng-model='item.licenseType', ng-options='c for c in licenseTypeDataProvider', style="width: 100%;")
    .control-group
      label.control-label(for="url") Source URL
        .controls
          input#url.form-control(
          ng-model='item.sourceUrl',
          placeholder="Enter a url...")

  a.add-additional(ng-click='addCopyrightItem()')
    i(class="fa fa-{{!!expandKeySkills ? 'minus' : 'plus'}}-square-o", style="margin-left: 6px; margin-right: 6px;")
    span Add more


  h3 Historical Information
    h4 Prior Use

    .control-group
      p.help-block This item was previously used in a
      label.control-label(for='priorUse') Prior Use
        .controls
          select#priorUse(name='profile.priorUse', ng-model='profile.priorUse', ng-options='c for c in priorUseDataProvider')

    .control-group
      label.control-label(for='priorGradeLevel') Grade Level
        .controls(style="width:80%")
          button-bar#gradeLevel(ng-model="profile.priorGradeLevel", button-provider="gradeLevelDataProvider", key="key")

    h4 Reviews Passed
    .control-group
      p.help-block This question passed the following reviews
      label.control-label Reviews Passed
      .div(style="width:240px;")
        label(ng-repeat='rp in reviewsPassedDataProvider', style="width:50%;")
          input(type='checkbox', ng-model='rp.selected', style="margin-right: 3px;")
          | {{rp.key}}

    .control-group
      label.control-label(for='pValue') Difficulty Level
        .controls
          input#pValue.input-mini(type='text', ng-model='profile.pValue')
          span.lead(style='padding-left: 50px;') {{pValueAsString}}

    .control-group
      label.control-label(for='lexile') Lexile Score
        .controls
          input#lexile.input-mini(type='text', ng-model='profile.lexile')
          span.lead(style='padding-left: 5px;') L



