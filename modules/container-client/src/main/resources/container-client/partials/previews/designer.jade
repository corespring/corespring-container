script#designer-preview(type='text/ng-template')
  .client-side-preview(ng-controller="ClientSidePreview", ng-class="{previewHidden: isPreviewHidden()}")
    player-control-panel

    .player-container

      corespring-preview-player(
        player-mode="editor",
        player-markup="data.item.xhtml",
        player-item="data.item",
        player-session="rootModel.session",
        player-outcomes="outcome")

      summary-feedback(template="designer.jade",item="data.item",session="session")

      .button-holder
        button.btn.btn-primary(ng-click="submit()", ng-disabled="!canSubmit()") Submit
