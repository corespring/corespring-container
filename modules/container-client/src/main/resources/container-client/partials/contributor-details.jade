    label.control-label Copyright Year
    .controls.form-inline
      input.form-control(type='text', ng-model='itemData.copyrightYear')
      &nbsp;
      label Copyright Expiration Date
      input.form-control(type='text', ng-model='itemData.copyrightExpirationDate')
  .control-group
    label.control-label(for='costForResource') Cost for Resource
    .controls
      .input-group
        span.input-group-addon $
        input(type="text", class="form-control")
        span.input-group-addon .00

