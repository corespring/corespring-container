    label.control-label(for='copyrightOwner') Copyright Owner
    .controls
      input#copyrightOwner.form-control(type='text', ng-model='itemData.copyrightOwner')
  .control-group
    label.control-label(for='author') Author
    .controls
      input#author.form-control(type='text', ng-model='itemData.author')
  .control-group
    label.control-label Credentials
    .controls
      select.form-control(ng-model='itemData.credentials', ng-options='c for c in itemData.$credentialsDataProvider')
  .control-group
    label.control-label(for='sourceUrl') Source URL
    .controls
      input#sourceUrl.input.form-control(size='16', type='text', ng-model='itemData.sourceUrl')
