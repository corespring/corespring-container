block after-main-script
  script.

    window.submit = function() {
      var scope = angular.element(document.getElementById('root')).scope();
      var rootScope = scope.$root;
      scope.$apply(function() {
        rootScope.$broadcast('playerControlPanel.submit');
      });
    };

    window.reset = function() {
      var scope = angular.element(document.getElementById('root')).scope();
      var rootScope = scope.$root;
      scope.$apply(function() {
        rootScope.$broadcast('playerControlPanel.reset');
      });
    };

    window.setMode = function(mode) {
      var scope = angular.element(document.getElementById('root')).scope();
      var rootScope = scope.$root;
      scope.$apply(function() {
        rootScope.$broadcast('playerControlPanel.setMode', {mode: mode});
      });
    };

    window.itemJson = !{itemJson};
